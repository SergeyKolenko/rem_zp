.js-modal-window.modal.fade{ aria:{ labelledby: 'district_createModalLabel' }, role: 'dialog', tabindex: '-1' }
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{ aria: { label: 'Close' }, data: { dismiss: 'modal' }, type: 'button' }
          %span{ aria: { hidden: true } } Ã—
        %h4.modal-title#district_createModalLabel
          = t('edit')
      = form_with scope: District.new, url: admin_districts_path, method: :post, class: 'form-horizontal js-modal-form', local: true do |f|
        .modal-body
          .form-group
            .col-sm-3.control-label
              = f.label :city_id, class: 'control-label'
            .col-sm-9
              = f.select :city_id, cities_for_select, class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :code, class: 'control-label'
            .col-sm-9
              = f.text_field :code, class: 'form-control', required: true
          .form-group
            .col-sm-3.control-label
              = f.label :name
            .col-sm-9
              = f.text_field :name, class: 'form-control', required: true
        .modal-footer
          = f.submit t('save'), class: 'btn btn-success'
          %button.btn.btn-default{ data: { dismiss: 'modal' }, type: 'button' }
            = t('cancel')