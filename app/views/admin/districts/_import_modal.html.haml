.modal.fade#importModal{ tabindex: -1, role: 'dialog', aria: { labelledby: 'district_importModalLabel'} }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ aria: { label: 'Close' }, data: { dismiss: 'modal' }, type: 'button' }
          %span{ aria: { hidden: true } } Ã—
        %h4.modal-title#district_importModalLabel
          = t('shared.import_title')
        %p
          = t('admin.districts.import_instruction')
        = link_to t('shared.instruction'), admin_upload_instructions_path
      = form_with url: import_admin_districts_path, multipart: true, local: true, class: 'form-horizontal' do |f|
        .modal-body
          .form-group
            .col-sm-3.control-label
              = f.label :city_id, "#{t('activerecord.models.city.one')}:", class: 'control-label'
            .col-sm-9
              = f.select :city_id, cities_for_select, class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :file, t('shared.import_title'), class: 'control-label'
            .col-sm-9
              = f.file_field :file
        .modal-footer
          = f.submit t('admin.file.import_button'), class: 'btn btn-success'
          %button.btn.btn-default{ data: { dismiss: 'modal' }, type: 'button' }
            = t('cancel')
