.js-modal-window.modal.fade{ aria:{ labelledby: 'option_createModalLabel' }, role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ data: { dismiss: 'modal'}, aria: {label: 'Close' } }
          %span{ aria: { hidden: true} } Ã—
        %h4.modal-title#myModalLabel
          = t('edit')
      = form_with scope: Option.new, url: admin_options_path, method: :post, class: 'form-horizontal js-modal-form', local: true do |f|
        .modal-body
          .form-group
            = f.label :name, class: 'col-sm-3 control-label'
            .col-sm-9
              = f.text_field :name, class: 'form-control', required: true
          .form-group
            = f.label :code, class: 'col-sm-3 control-label'
            .col-sm-9
              = f.text_field :code, class: 'form-control', required: true
          .form-group
            = f.label :unit, class: 'col-sm-3 control-label'
            .col-sm-9
              = f.text_field :unit, class: 'form-control'
          .form-group
            = f.label :category_ids, t('shared.categories'), class: 'col-sm-3 control-label'
            .col-sm-9
              = f.collection_select :category_ids, all_categories, :id, :name,
                {}, {multiple: true, class: 'select2' }
        .modal-footer
          = f.submit t('save'), class: 'btn btn-success'
          %button.btn.btn-default{ data: { dismiss: 'modal' }, type: 'button' }
            = t('cancel')