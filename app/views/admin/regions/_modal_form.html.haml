.js-modal-window.modal.fade{ aria:{ labelledby: 'region_createModalLabel' }, role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ data: { dismiss: 'modal'}, aria: {label: 'Close' }}
          %span{ aria: { hidden: true} } Ã—
        %h4.modal-title#myModalLabel
          = t('edit')
      = form_with scope: Region.new, url: admin_region_path(:id), method: 'patch', class: 'form-horizontal js-modal-form', local: true do |f|
        .modal-body
          .form-group
            .col-sm-3.control-label
              = f.label :code, class: 'control-label'
            .col-sm-9
              = f.text_field :code, class: 'form-control', required: true
          .form-group
            .col-sm-3.control-label
              = f.label :name
            .col-sm-9
              = f.text_field :name, class: 'form-control', required: true
        .modal-footer
          = f.submit t('edit'), class: 'btn btn-success'
          %button.btn.btn-default{ data: { dismiss: 'modal' }, type: 'button' }
            = t('cancel')