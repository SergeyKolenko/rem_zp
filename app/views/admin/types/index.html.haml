.row
  .col-xs-12
    .page-header
      %h1
        = t('shared.categories')
      %button.btn.btn-primary.btn-lg{ data:{target: "#category_createModal", toggle: "modal", whatever: "@mdo", type: "button"} }
        %span.glyphicon.glyphicon-plus
        = t('create')
.row
  .col-xs-12
    %table.table.table-bordered
      %thead
        %tr
          %th.text-right.col-sm-1 Id
          %th.text-center
            = Type.human_attribute_name(:name)
          %th.text-center
            = Type.human_attribute_name(:code)
          %th.text-center.col-sm-3.col-xs-1
            = t('actions')
      %tbody
        - @typees.each do |type|
          %tr
            %th.text-right
              #{type.id}
            %td
              #{type.name}
            %td
              #{type.code}
            %td.text-center.actions
              %button.btn.btn-warning.btn-xs.edit_btn{ data:{ target: "#category_updateModal", toggle: "modal", whatever: "@mdo", type: "button", code:"#{category.code}",
                                                      name:"#{category.name}", weight:"#{category.weight}", url:admin_category_path(category.id)}}
                %span.glyphicon.glyphicon-pencil
                = t('edit')
              = link_to admin_category_path(category.id), method: :delete, data: { confirm: t('are_you_sure') }, class: 'btn btn-danger btn-xs' do
                %span.glyphicon.glyphicon-trash
                = t('delete')
.row
  .col-xs-12
    - if (@types.count > 0 && @types.total_pages > 1)
      .text-center
        = paginate @types, theme: 'twitter-bootstrap-3'
= render 'new_type_form'
= render 'update_type_form'







