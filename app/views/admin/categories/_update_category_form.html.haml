%footer#category_updateModal.modal.fade{"aria-labelledby": "category_updateModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
          %span{"aria-hidden": "true"} ×
        %h4#category_updateModalLabel.modal-title
          Изменить категорию
      = form_with scope: :category, url: admin_category_path(:id), method: 'patch', id: 'update_category_form', class: 'form-horizontal', local: true do |c|
        .modal-body
          .form-group
            .col-sm-2.control-label
              = c.label :name
            .col-sm-10
              = c.text_field :name, class: 'form-control', required: true, id: 'category_name'
          .form-group
            .col-sm-2.control-label
              = c.label :weight
            .col-sm-10
              = c.number_field :weight, class: 'form-control',  required: true, id: 'category_weight'
        .modal-footer
          = c.submit 'Редактировать', class: 'btn btn-success'
          %button.btn.btn-default{"data-dismiss": "modal", type: "button"}
            Отмена


