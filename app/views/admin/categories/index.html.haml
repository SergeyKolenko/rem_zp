.page-header
  %h1 Категории:
  %button.btn.btn-primary.btn-lg{ data:{target: "#category_createModal", toggle: "modal", whatever: "@mdo", type: "button"} }
    %span.glyphicon.glyphicon-plus
    Создать
%table.table.table-bordered
  %thead
    %tr
      %th Id
      %th Название
      %th Вес
      %th Действия
  %tbody
    - @categories.each do |category|
      %tr
        %th
          #{category.id}
        %td
          #{category.name}
        %td
          #{category.weight}
        %td
          %button.btn.btn-warning.btn-xs.edit_btn{ data:{target: "#category_updateModal", toggle: "modal", whatever: "@mdo", type: "button", id:"#{category.id}", url:admin_category_path(category.id)}}
            %span.glyphicon.glyphicon-pencil
            Править
          |
          = link_to admin_category_path(category.id), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger btn-xs' do
            %span.glyphicon.glyphicon-trash
            Удалить
.text-center
  = will_paginate @categories, renderer: BootstrapPagination::Rails, class: 'pagination-xs'
= render 'new_category_form'
= render 'update_category_form'







