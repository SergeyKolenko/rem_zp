.js-modal-window.modal.fade{ aria:{ labelledby: 'category_createModalLabel' }, role: 'dialog', tabindex: '-1' }
  .modal-dialog{ role: 'document'}
    .modal-content
      .modal-header
        %button.close{  data: { dismiss: 'modal' }, aria: { label: 'Close' } }
          %span{ aria: { hidden: true } } Ã—
        %h4.modal-title#category_createModalLabel
      = form_with scope: Category.new, url: admin_categories_path, method: :post, class: 'form-horizontal js-modal-form', local: true do |c|
        .modal-body
          .form-group
            .col-sm-3.control-label
              = c.label :name
            .col-sm-9
              = c.text_field :name, class: 'form-control', required: true
          .form-group
            .col-sm-3.control-label
              = c.label :weight
            .col-sm-9
              = c.number_field :weight, class: 'form-control', required: true
          .form-group
            .col-sm-3.control-label
              = c.label :code
            .col-sm-9
              = c.text_field :code, class: 'form-control', required: true
        .modal-footer
          = c.submit t('save'), class: 'btn btn-success'
          %button.btn.btn-default{ data: { dismiss: 'modal' }, type: 'button' }
            = t('cancel')