%header.navbar.top-nav.navbar-fixed-top
  .container
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', role: 'button', aria: {haspopup: true, expanded: false}, data: {toggle: 'dropdown'} do
            = t('activerecord.attributes.user.locale')
            %span.caret
          = render 'layouts/shared/locale_dropdown_menu'
        %li
          = link_to root_path, class: 'btn' do
            %span.glyphicon.glyphicon-wrench
            = t('admin.go_to_site')
        - if current_user
          %li
            = link_to admin_edit_user_registration_path do
              - if current_user.avatar.present?
                = image_tag current_user.avatar, class: 'header-avatar'
              - else
                %span.glyphicon.glyphicon-user
              = current_user.full_name
          %li
            = link_to destroy_user_session_path, method: :delete do
              %span.glyphicon.glyphicon-log-out
              = t('application.header.sign_out')
        %li.pull-right.hidden-lg.hidden-md.hidden-sm
          = link_to '#', class: 'ham-menu-btn navbar-toggle', data: { toggle: 'collapse', target: '.collapse-side-bar' } do
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
