%header.navbar.top-nav.navbar-fixed-top
  .container
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to root_path, class: 'btn' do
            %span.glyphicon.glyphicon-wrench
            = t('admin.go_to_site')
        - if current_user
          %li
            = link_to '#' do
              %span.glyphicon.glyphicon-user
              = current_user.full_name
          %li
            = link_to destroy_user_session_path do
              %span.glyphicon.glyphicon-log-out
              = t('application.header.sign_out')
        %li.pull-right.hidden-lg.hidden-md.hidden-sm
          = link_to '#', class: 'ham-menu-btn navbar-toggle', data: { toggle: 'collapse', target: '.collapse-side-bar' } do
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
