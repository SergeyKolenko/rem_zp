%footer
  .bg-primary.separator
  .container
    .col-md-3.col-sm-6.col-xs-12
      %ul.list-unstyled
        %li.list-head
          %h4
            =t('shared.categories')
        - all_categories.each do |category|
          %li
            = link_to category.name, '#'
    .col-md-3.col-sm-6.col-xs-12
      %ul.list-unstyled
        %li.list-head
          %h4
            =t('application.footer.hot_links')
        %li
          %a{href: '#'}
            =t('shared.agencies')
        %li
          %a{href: '#'}
            =t('application.footer.spec_actions')
        %li
          %a{href: '#'}
            =t('application.footer.urgent')
        %li
          %a{href: '#'}
            =t('application.header.control_panel')
    .col-md-3.col-sm-6.col-xs-12
      %ul.list-unstyled
        %li.list-head
          %h4
            =t('shared.proposals')
        - all_types.each do |type|
          %li
            = link_to type.name, '#'
    .col-md-3.col-sm-6.col-xs-12
      %ul.list-unstyled
        %li.list-head
          %h4
            =t('application.footer.extra')
        %li
          %a{href: '#'}
            =t('application.footer.sitemap')
        %li
          %a{href: '#'}
            =t('application.footer.public_offer')
        %li
          %a{href: '#'}
            =t('application.footer.cookie_policy')
        %li
          %a{href: '#'}
            =t('application.footer.complaint')
        %li
          %a{href: '#'}
            =t('application.footer.fault_report')
  .bg-success.copy
    .text-center
      =t('application.footer.copyright')
      %sup &copy;
      = Date.today.year