.row
  %h2.text-center
    = t 'devise.passwords.forgot_pass'
  .col-xs-8.col-sm-8.col-md-10
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .text-center= devise_error_messages!
      .form-group
        .col-sm-8.col-sm-offset-3
          = f.label :email, class: 'control-label'
          = f.email_field :email, class: 'form-control', autofocus: true, required: true
      .form-group
        .col-sm-8.col-sm-offset-3.mart-5
          = f.submit t('devise.passwords.forgot_send'), class: 'btn btn-success'
          .mart-5
            = render 'devise/shared/links'
